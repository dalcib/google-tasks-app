{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",   
        "jsx": "react",
        "sourceMap": true,
        "noImplicitAny": true,
        "baseUrl": "./src",
        "paths": {
            "actions": ["actions/"],
            "components": ["components/"],
            "containers": ["containers/"],
            "reducers": ["reducers/"],
        },
        "outDir": "dist/",
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ]
}